<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompat.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.ButtomPrimary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.ButtomPrimaryDark">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.ButtomAccent">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.ButtomBlack">
        <item name="android:background">@color/primary_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ButtomBlackNoMargin">
        <item name="android:background">@color/primary_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TextViewWhite">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.TextViewPrimary">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.TextViewSecondary">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.TextViewAccent">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
